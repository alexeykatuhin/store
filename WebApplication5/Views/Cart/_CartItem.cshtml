		{
			<input type="hidden" value="@Model.Item.Id" name="Id" />
			<input name="newQuantity"  type="text" class="qty" value="@Model.Quantity">
			<br>
			<input type="submit" value="Update"/>

		}
	</td>
	<td class="cartbuttons">
		<div class="buttons clearfix">
			<div class="col-xs-9 col-sm-12 col-md-9 col-lg-9 price"><div class="old-price">₽@(Model.Item.Price * 1.4)</div><div class="new-price">₽@(Model.Item.Price)</div></div>
