@model List<WebApplication5.Models.NavViewModel>


<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 wfilter">
	<h2>Категории</h2>
	<div class="row dividerml clearfix">&nbsp;</div>

	<div class="filter clearfix">
		<div class="filterbox">
			<ul>
				
				<li class="liNav">
					<div>
					
						@Html.ActionLink("Домой", "List", "Item", null, new {@class = "text-center aNav" + (null == ViewBag.SelectedCategory ? " aNavSelected" : "")})
					</div>
				</li>
				@if (Model.Any())
				{
					foreach (var link in Model)
					 {
						 <li>
							 <div>
								 @Html.RouteLink(string.Format("{0} ({1})", link.Name, link.Count), new
								 {
									 controller = "Item",
									 action = "List",
									 category = link.Name
								 }, new {@class = "text-center" + (link.Name == ViewBag.SelectedCategory ? " aNavSelected" : "")})
							 </div>
						 </li>
					 }
				}
			</ul>
		</div>
	</div>
</div>



























